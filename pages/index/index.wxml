<!--index.wxml-->
<view class="container">
  <view class='swiper-wrap'>
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}" wx:key='index'>
        <swiper-item>
          <image src="{{item}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='hrBorder'></view>
  <view class='boxIndex'>
    <view class='titleIndex'>
      <image src='images/icon1.png' class='titleIcon'></image>
      <text>中智空气监测</text>
      <text class='more'>更多</text>
    </view>
    <view class='jianceList'>
      <view class='list' wx:for='{{listTexts}}' wx:key='index' data-index='{{index}}' bindtap='goArticleInfo'>
        <text class='textWorld'>{{item.text}}</text>
        <text class='dataWorld'>{{item.data}}</text>
      </view>
    </view>
  </view>
  <view class='hrBorder'></view>
  <view class='boxIndex'>
    <view class='titleIndex'>
      <image src='images/icon2.png' class='titleIcon'></image>
      <text>关于我们</text>
    </view>
    <view class='aboutMe'>
      <text>{{name}}</text>
      <text>地址：{{adress}}</text>
      <text>联系人：{{phone}}</text>
    </view>
  </view>
  <view class='hrBorder'></view>
  <view>

  </view>
</view>